# Storage Configuration
# Choose between 's3' and 'local' for file storage
UPLOAD_MODE=s3

# AWS Configuration (REQUIRED for S3 mode)
# Get these from your AWS IAM user with S3 access
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-southeast-1
S3_BUCKET=khai-photo

# Local Storage Configuration (REQUIRED for local mode)
LOCAL_STORAGE_PATH=./uploads

# Database Configuration (REQUIRED for photographer authentication)
DATABASE_URL="mysql://james:!Bb023698741@localhost:3306/photographer_db"

# JWT Configuration (REQUIRED for photographer authentication)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# API Configuration
# Set a secure API key for authentication (for desktop app)
EXPECTED_API_KEY=your-secure-api-key-here

# Server Configuration
PORT=3000
NODE_ENV=production

